<mah:MetroWindow x:Class="EbonySnapsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EbonySnapsManager"
        mc:Ignorable="d"
        Title="Ebony Snaps Manager" 
        Height="573" 
        Width="928" 
        TitleCharacterCasing="Normal" 
        WindowTitleBrush="Black" 
        Icon="/images/app_icon.ico"
        BorderBrush="Black"
        BorderThickness="3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <TabControl Style="{DynamicResource MahApps.Styles.TabControl.Animated}" 
                    Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="3" 
                    BorderThickness="3" BorderBrush="Black">
            <TabItem Header="Snaps Viewer" BorderThickness="2" mah:HeaderedControlHelper.HeaderFontSize="15" BorderBrush="Black"/>
            <TabItem Header="Snap Tools" BorderThickness="2" mah:HeaderedControlHelper.HeaderFontSize="15" BorderBrush="Black"/>
        </TabControl>

        
        <StatusBar Grid.Row="5" Grid.ColumnSpan="5">
            <StatusBarItem FontSize="16"></StatusBarItem>
            <StatusBarItem>
                <TextBlock FontSize="16" Text="{Binding StatusBarText}"></TextBlock>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</mah:MetroWindow>