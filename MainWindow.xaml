<mah:MetroWindow x:Class="EbonySnapsManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EbonySnapsManager"
        mc:Ignorable="d"
        Title="Ebony Snaps Manager" 
        Height="573" 
        Width="928" 
        TitleCharacterCasing="Normal" 
        WindowTitleBrush="Black" 
        Icon="/images/app_icon.ico"
        BorderBrush="Black"
        BorderThickness="3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="45"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <TabControl Style="{DynamicResource MahApps.Styles.TabControl.Animated}" 
                    Grid.Row="1" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="3" 
                    BorderThickness="3" BorderBrush="Black">
            <TabItem Header="Snap Viewer" BorderThickness="2" mah:HeaderedControlHelper.HeaderFontSize="15" BorderBrush="Black">
                <StackPanel Orientation="Horizontal">
                    
                    <Button Style="{StaticResource MahApps.Styles.Button.Square}" Width="135" Height="28" Margin="45,0,0,390">
                        <TextBlock Text="Load Snapshot"/>
                    </Button>
                    
                    <Button Style="{StaticResource MahApps.Styles.Button.Square}" Width="165" Height="28" Margin="320,0,0,390">
                        <TextBlock Text="Load Snapshot(s) directory"/>
                    </Button>
                    
                    <Label Margin="55,0,0,380" Height="28">SnapsList:</Label>

                    <ListBox Margin="-60,35,0,0" BorderThickness="3" BorderBrush="Black" Width="125" Height="390" MaxWidth="125" MaxHeight="390"/>

                    <Image Margin="0,0,0,0">
                        
                    </Image>


                </StackPanel>


                    
            </TabItem>
            <TabItem Header="Snap Tools" BorderThickness="2" mah:HeaderedControlHelper.HeaderFontSize="15" BorderBrush="Black">
                
            </TabItem>
        </TabControl>

        
        <StatusBar Grid.Row="5" Grid.ColumnSpan="5">
            <StatusBarItem FontSize="16"></StatusBarItem>
            <StatusBarItem>
                <TextBlock FontSize="16" Text="{Binding StatusBarText}"></TextBlock>
            </StatusBarItem>
        </StatusBar>
        
    </Grid>
</mah:MetroWindow>